<%= render "slides/topnav" %>
<div class="container">
<div class="row">
   <div class="col-sm-12">
<h1> Create a slideshow </h1>
<%= form_for :slide, url: slides_path do |f| %>
   <p>
   <%= f.label :title %><br>
   <%= f.text_field :title %> <br>
   <%= check_box_tag "use_demo", "true"%>
   <%= label_tag "use_demo", "Include tutorial pages" %>
   </p>
   <p>
   <%= f.submit "Create", :class=>"btn btn-primary"%>
   </p>
<% end %>
</div>
</div>
</div>
